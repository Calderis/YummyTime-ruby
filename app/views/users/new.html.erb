<h1>Sign Up</h1>

<%= form_for @user do |f| %>
<% if @user.errors.any? %>
<div class="error_messages">
	<h2>Form is invalid</h2>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :mail %><br />
	<%= f.text_field :mail %>
</div>
<div class="field">
	<%= f.label :password %><br />
	<%= f.password_field :password %>
</div>
<div class="field">
	<%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation %>
</div>
<div class="field">
	<%= f.label :image %>
	<%= f.text_field :image %>
</div>
<div class="field">
	<%= f.label :country %>
	<%= f.text_field :country %>
</div>
<div class="actions"><%= f.submit "Sign Up" %></div>
<% end %>

<%= link_to 'Back', users_path %>
