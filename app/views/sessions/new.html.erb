<h1>Log In</h1>
<%= form_tag sessions_path do %>
<div class="field">
	<%= label_tag :mail %><br />
	<%= text_field_tag :mail, params[:mail] %>
</div>
<div class="field">
	<%= label_tag :password %><br />
	<%= password_field_tag :password %>
</div>
<div class="actions"><%= submit_tag "Log In" %></div>
<% end %>