<!DOCTYPE html>
<html>
<head>
	<title>YummyTime</title>

	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<% if logged_in? %>
	<%= render "header/index", user: @current_user %>

	<section class="main_frame">
		<%= render "sidebarleft/index", {user: @current_user, presenter: @profile_presenter} %>
		<% end %>

		<%= yield %>

		<% if logged_in? %>
		<%= render "sidebarright/index", user: @current_user %>
		<%= render "weeks/bottom", user: @current_user %>
		
		<% end %>
	</section>

	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</body>
</html>
